{
  "name": "lto-chain-listener",
  "version": "1.0.0",
  "description": "LTO Public Chain listener",
  "typings": "./dist/lto-chain-listener.d.ts",
  "main": "./dist/lto-chain-listener.js",
  "types": "./dist/lto-chain-listener.d.ts",
  "module": "system",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack -w",
    "build:prod": "webpack --mode=production",
    "prepublishOnly": "npm run build:prod",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --detectOpenHandles --forceExit --coverage"
  },
  "keywords": [
    "lto",
    "chain",
    "listener"
  ],
  "author": "Bruno Duarte Brito <bruno@ltonetwork.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node-localstorage": "^1.3.0",
    "jest": "^27.4.4",
    "ts-jest": "^27.1.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "node-localstorage": "^2.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
